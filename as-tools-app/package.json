{
  "name": "as-tools-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "build": {
    "productName": "AS Tools",
    "appId": "com.aperture.tools",
    "directories": {
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Task Nexus"
    },
    "extraFiles": [
      {
        "from": "./public/Tools",
        "to": "Tools",
        "filter": ["**/*"]
      },
      {
        "from": "./public/Theme",
        "to": "Theme",
        "filter": ["**/*"]
      }
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "electron-store": "^8.2.0"
  },
  "main": "dist-electron/main.js"
}
